<div class="container padding-top">
    <h2 class="pt-5">Community</h2>
    <div class="row">
        {{#each usersCommunity}}
        <div class="col-lg-3 col-mb-12">
            <div class="card-deck"></div>
            <div class="card my-3" style="width:100%">
                <a class="link-to-profile" href="/user/profile/{{id}}">
                    <div style="height: 200px;overflow: hidden;"><img class="card-img-top" src="{{imageUrl}}"
                            alt="Card image cap">
                    </div>

                    <div class="card-body">
                        <h5 class="card-title">{{username}}</h5>
                        <p class="card-text"><small class="text-muted">{{email}}</small></p>
                    </div>
                </a>
                <form class="form-block following-form mt-5" action="/user/following/{{_id}}" method="post">
                    <input type="hidden" value="{{username}}" name="username">
                    <input type="hidden" value="{{imageUrl}}" name="imageUrl">
                    <button class="btn" type="submit"><img src="/images/favourites.png" alt=""></button>
                </form>
                {{#if @root.admin}}
                <div class="btn-admin-container">
                    <a class="btn btn-primary btn-admin" href="/user/edit/{{id}}">Edit</a>
                    <a class="btn btn-danger btn-admin" href="/user/delete/{{id}}">Delete</a>
                </div>
                {{/if}}
            </div>
        </div>
        {{/each}}
    </div>
</div>