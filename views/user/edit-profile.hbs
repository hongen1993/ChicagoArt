<div class="container bootstrap snippets bootdey padding-top">
    <h1 class="text-dark pt-5">Edit Profile</h1>
    <hr>
    <div class="row">
        <div class="col-md-3">
            <div class="text-center">
                <img src="{{imageUrl}}" class="avatar img-circle img-thumbnail" alt="avatar">
            </div>
        </div>

        <div class="col-md-9 personal-info">
            <h3>Personal info</h3>

            <form class="form-horizontal" role="form" action="/user/edit-profile/{{id}}" method="post">
                <div class="form-group">
                    <label class="col-lg-3 control-label">Name:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" value="{{username}}" name="username">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Email:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" value="{{email}}" name="email">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Password:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="password" name="password">
                    </div>
                </div>
                <button class="btn btn-light" type="submit">Edit profile</button>
                {{#if errorMessage}}
                <p class="error">{{errorMessage}}</p>
                {{/if}}
            </form>
        </div>
    </div>
</div>
<hr>